# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /exp                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /exp/count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /exp/message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /exp/assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Back-end routes
POST	/login							controllers.AccountController.loginPost

POST	/register						controllers.AccountController.registerPost

POST	/activ/:link					controllers.AccountController.activate(link: String)

#Deleting all accounts
GET		/clean							controllers.AccountController.clean

#Front-end routes
GET		/login							controllers.AccountController.loginGet
GET		/register						controllers.AccountController.registerGet


#Swagger
#GET     /swagger.json           controllers.ApiHelpController.getResources